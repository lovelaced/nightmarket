# Nightmarket UI Environment Variables

# RPC Endpoint (Paseo Asset Hub Testnet)
NEXT_PUBLIC_RPC_URL=https://testnet-passet-hub-eth-rpc.polkadot.io

# Chain ID (Paseo Asset Hub)
NEXT_PUBLIC_CHAIN_ID=420420422

# Contract Addresses (populate after deployment)
NEXT_PUBLIC_ZONES_CONTRACT=
NEXT_PUBLIC_LISTINGS_CONTRACT=
NEXT_PUBLIC_ESCROW_CONTRACT=
NEXT_PUBLIC_MIXER_CONTRACT=
NEXT_PUBLIC_REPUTATION_CONTRACT=

# Feature Flags
NEXT_PUBLIC_ENABLE_MIXER=true
NEXT_PUBLIC_ENABLE_ESCROW=true
NEXT_PUBLIC_DEBUG_MODE=false

# ZK Circuit Configuration
# Leave blank to use default /circuits/ path
NEXT_PUBLIC_CIRCUITS_PATH=/circuits/

# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=

# Optional: Sentry Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=
